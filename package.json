{
    "name": "musicverse",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "start:frontend": "yarn workspace musicverse-frontend start",
        "start:backend": "yarn workspace musicverse-backend start",
        "dev:frontend": "yarn workspace musicverse-frontend dev",
        "dev:backend": "yarn workspace musicverse-backend start",
        "build:frontend": "yarn workspace musicverse-frontend build",
        "build:backend": "echo 'No build step for backend'",
        "start": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\"",
        "build": "yarn build:frontend && yarn build:backend"
    },
    "devDependencies": {
        "concurrently": "^7.2.1"
    }
}